<%- include('header'); -%>

    <div class="box" id="heading">
        <h1 style="color: purple;">
            <%= listTitle %>
        </h1>
        <h2>
            <%= day %>
        </h2>
    </div>

    <div class="box">

        <% newListItem.forEach(element=> { %>
            <div class="item">
                <input type="checkbox" name="" id="">
                <p>
                    <%= element %>
                </p>
            </div>
            <% }); %>

                <form class="item" action="/" method="post">
                    <input type="text" name="newItem" autocomplete="off" />
                    <button type="submit" name="button" value='<%=listTitle %>'>+</button>
                </form>
    </div>

    <%- include('footer'); -%>